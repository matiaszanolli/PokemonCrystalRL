#!/bin/bash
# Simple Pokemon Crystal RL Training - One Command Starter
# Usage: ./train [actions] [options]

ACTIONS=${1:-1000}
OPTIONS=${@:2}

echo "🚀 Pokemon Crystal RL - Quick Training"
echo "🎯 Actions: $ACTIONS"
echo "🌐 Web Monitor: http://localhost:8080"
echo ""

python start_training.py --mode fast_local --actions "$ACTIONS" --web $OPTIONS
